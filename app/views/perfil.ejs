<% include components/header %>

<body class="animsition">
    <div class="page-wrapper">
        <!-- MENU SIDEBAR-->
        <% include components/menu_lateral %>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container2">
            <!-- HEADER DESKTOP-->
            <% include components/header_desktop %>
            <!-- END HEADER DESKTOP-->

            <!-- BREADCRUMB-->
            <section class="au-breadcrumb m-t-75">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="au-breadcrumb-content">
                                    <div class="au-breadcrumb-left">
                                        <span class="au-breadcrumb-span">Você está aqui:</span>
                                        <ul class="list-unstyled list-inline au-breadcrumb__list">
                                            <li class="list-inline-item active">
                                                <a href="/">Home</a>
                                            </li>
                                            <li class="list-inline-item seprate">
                                                <span>/</span>
                                            </li>
                                            <li class="list-inline-item">Perfil</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END BREADCRUMB-->

            <!-- STATISTIC-->
            <section class="statistic">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6 col-lg-3">
                                <div class="statistic__item">
                                    <h2 class="number">#1</h2>
                                    <span class="desc"><%= data.nome %></span>
                                    <div class="icon">
                                        <i class="zmdi zmdi-account-o"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="statistic__item">
                                    <h2 class="number"><%= projetos.length %></h2>
                                    <span class="desc">Projetos que você fez/faz parte.</span>
                                    <div class="icon">
                                        <i class="zmdi zmdi-shopping-cart"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="statistic__item">
                                    <h2 class="number"><%= clientes.length %></h2>
                                    <span class="desc">Clientes adicionados por você.</span>
                                    <div class="icon">
                                        <i class="zmdi zmdi-calendar-note"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-3">
                                <div class="statistic__item">
                                    <h2 class="number"><%= dinheiro4me %></h2>
                                    <span class="desc">Reais gerados por você.</span>
                                    <div class="icon">
                                        <i class="zmdi zmdi-money"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <!-- END STATISTIC-->

            <section>
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-xl-12">
                                <!-- RECENT REPORT 2-->
                                <form id="formAtualizar">
                                <div class="recent-report2" style="text-align: center;">
                                    <h3>Seus dados</h3>
                                    <br>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                          <label for="nome">Nome</label>
                                          <input type="text" class="form-control" id="nome" placeholder="Nome" value="<%= meus_dados.nome %>">
                                        </div>
                                        <div class="form-group col-md-6">
                                          <label for="email">E-mail</label>
                                          <input type="email" class="form-control" id="email" placeholder="e-mail" value="<%= meus_dados.email %>">
                                        </div>
                                    </div>

                                    <script>
                                        if(<%= meus_dados.isAtivo %>){
                                            document.getElementById("isAtivo").checked = true; 
                                        }
                                    </script>

                                    <div class="form-row">
                                        <img src="uploads/profile_pics/<%= meus_dados.img %>" style="margin: 0 auto; width: 15%;">
                                    </div>
                                    <br>
                                    <button id="atualizar" name="<%= meus_dados._id %>" class="btn btn-primary">Atualizar dados</button>
                                </div>
                                </form>
                                <!-- END RECENT REPORT 2             -->
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <% include components/footer %>
            <!-- END PAGE CONTAINER-->
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="vendor/slick/slick.min.js">
    </script>
    <script src="vendor/wow/wow.min.js"></script>
    <script src="vendor/animsition/animsition.min.js"></script>
    <script src="vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="vendor/circle-progress/circle-progress.min.js"></script>
    <script src="vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="vendor/select2/select2.min.js">
    </script>
    <script src="vendor/vector-map/jquery.vmap.js"></script>
    <script src="vendor/vector-map/jquery.vmap.min.js"></script>
    <script src="vendor/vector-map/jquery.vmap.sampledata.js"></script>
    <script src="vendor/vector-map/jquery.vmap.world.js"></script>

    <!-- Main JS-->
    <script src="js/main.js">
    </script>

        <script>

        $("#atualizar").click(function(event){

            alert($('input[name=r2]:checked', '#formAtualizar').val())

            var cliente = {
                "nome": $("#nome").val(),
                "email": $("#email").val()
            }

            $.ajax({
                type: 'PUT',
                url: "perfil?id=" + this.name,
                async: false,
                data: cliente,
                success: function(data) {
                    console.log(data);
                    alert("ok")
                },
                error: function(data) {
                    console.log(data);
                }
            });
        });

    </script>
</body>

</html>
<!-- end document-->